extends layout

block content

  h1 Checked Out Books

  p
    a.button(href='new_book') Create New Book

    p
       Filters
      a(href='all_books') All

      a(href='overdue_books')  - Overdue


      a(href='checked_books')   - Checked Out

  table
    thead
      tr
        th Title

        th Author

        th Genre

        th Year Released

    tbody
    each loan in loans
      tr
        td
          a(href='book_detail/#{loan.Book.id}') #{loan.Book.title}

        td #{loan.Book.author}

        td #{loan.Book.genre}

        td #{loan.Book.first_published}
        
  include _paginate
