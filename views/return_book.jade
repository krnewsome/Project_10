extends layout

block content
  each loan in loans
    h1 Patron: Return Book

    p
      strong Book Title: #{loan.Book.title}


    p
      strong Loaned By: #{loan.Patron.first_name} #{loan.Patron.last_name}

    p
      strong Loaned On: #{loan.loaned_on}


    p
      strong Return By: #{loan.return_by}


    form(method='post')
      p
        label(for='returned_on') Returned on:
        input#returned_on(type='date', name='returned_on' value= loan.returned_on)

      p
        input(type='submit', value='Return Book')
