extends layout

block content

    h1 Books
    if(url === '/all_books')
      form(method='post')
        p
        label(for='search') Search
        input#search(type='text', name='search' )

        p
          input(type='submit', value='search')

    p
      a.button(href='new_book') Create New Book
    p
       Filters
      a(href='all_books') All

      a(href='overdue_books')  - Overdue


      a(href='checked_books')   - Checked Out

    table
      thead
        tr
          th Title

          th Author

          th Genre

          th Year Released

      tbody
        each book in books
          tr
            td
              a(href='book_detail/#{book.id}' ) #{book.title}

            td #{book.author}

            td #{book.genre}

            td #{book.first_published}

    include _paginate
